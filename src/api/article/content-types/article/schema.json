{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": false,
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "canonicalUrl": {
      "type": "string"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "string",
      "regex": "[A-Za-z0-9/-]+",
      "required": true,
      "unique": true
    }
  }
}
